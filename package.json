{
  "name": "polaaris",
  "version": "2.0.0",
  "description": "POLAARIS GUI for Legendary Epic Games Launcher",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "me.volpette.polaaris",
    "productName": "POLAARIS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "src/pages/static/asset",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "src/pages/static/asset/Polaaris.png"
    }
  },
  "keywords": [
    "egl",
    "legendary"
  ],
  "author": "Volpette Polaaris",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.6.7",
    "ini": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0"
  }
}
